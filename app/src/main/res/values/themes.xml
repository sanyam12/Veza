<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Veza" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="white" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/white</item>
    </style>

    <style name="sea_green" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">#2E8B57</item>
    </style>

    <style name="splash_settings" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
    </style>

    <style name="jungle_green" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/jungle_green</item>
    </style>
    <style name="Theme.Veza.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Veza.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" >
        <item name="colorPrimary">@color/jungle_green</item>
    </style>
    <style name="Theme.Veza.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="text_theme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:textColor">@color/black</item>
    </style>
</resources>